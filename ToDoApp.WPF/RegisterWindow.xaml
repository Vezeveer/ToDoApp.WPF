<Window x:Class="ToDoApp.WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="DarkSlateBlue"
        
        Title="Register" Height="450" Width="600">
    <StackPanel Margin="30">
        <Label Foreground="white" FontSize="30" HorizontalAlignment="Center">REGISTER</Label>
        <Separator></Separator>
        <Label FontSize="24" Foreground="White">Username</Label>
        <TextBox Name="txtUsername" Foreground="White" FontSize="22" Background="DarkGray" />
        <Label FontSize="24" Foreground="White">Password</Label>
        <PasswordBox Name="txtPassword" Foreground="White" FontSize="22" Background="DarkGray"></PasswordBox>

        <Button Name="btnNewUser" Click="btnNewUser_Click" Foreground="White" Width="200" Margin="20" FontSize="22" Background="DarkGray">Register</Button>

    </StackPanel>
</Window>
